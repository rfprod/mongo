{
  "name": "mongo-images",
  "version": "1.0.0",
  "private": true,
  "description": "MongoDB docker container images",
  "bugs": "https://github.com/rfprod/mongo/issues",
  "repository": "https://github.com/rfprod/mongo",
  "license": "MIT",
  "author": "rfprod <connect@rfprod.tk> (https://github.com/rfprod)",
  "scripts": {
    "build": "tsc -p ./src/tsconfig.app.json",
    "predocker:build:mongo": "yarn build",
    "docker:build:mongo": "sudo docker build -t portaldb -f .docker/mongo.Dockerfile .",
    "predocker:debug:mongo": "yarn build",
    "docker:debug:mongo": "echo \"CONTAINER_ID environment variable value is $CONTAINER_ID\" & sudo docker exec -it $CONTAINER_ID bash",
    "predocker:run:mongo": "yarn build",
    "docker:run:mongo": "sudo docker run --rm --name portaldb -it -p 127.0.0.1:27017:27017 portaldb",
    "lint": "eslint src/ tools/",
    "lint:fix": "eslint src/ tools/ --fix",
    "postinstall": "husky install && npx sort-json package.json && npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "maxHeaderWidth": 80,
      "maxLineWidth": 100,
      "minHeaderWidth": 16,
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "mongodb": "4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "commitizen": "4.2.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-rxjs": "3.3.7",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-watch": "7.0.0",
    "husky": "7.0.2",
    "prettier": "2.4.0",
    "rxjs": "7.3.0",
    "sort-json": "2.0.0",
    "sort-package-json": "1.51.0",
    "tslib": "2.3.1",
    "typescript": "4.4.3"
  },
  "engines": {
    "node": ">=14.17.6",
    "npm": ">=6.14.8"
  }
}
